<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <title>Change Tracker Report</title>
  <style>
{{ styles }}
  </style>
</head>
<body>
  <header class="page-header">
    <h1>{{ report_title }}</h1>
    {% if report_subtitle %}
    <div class="subtitle">{{ report_subtitle }}</div>
    {% elif file_a_name or file_b_name %}
    <div class="subtitle">{{ file_a_name }} vs {{ file_b_name }}</div>
    {% endif %}
    <div class="meta">Generated: {{ timestamp }}</div>
  </header>

  <section class="stats">
    <div class="stat">
      <div class="stat-label">Total</div>
      <div class="stat-value">{{ statistics.total_segments }}</div>
    </div>
    <div class="stat added">
      <div class="stat-label">Added</div>
      <div class="stat-value">{{ statistics.added }}</div>
    </div>
    <div class="stat deleted">
      <div class="stat-label">Deleted</div>
      <div class="stat-value">{{ statistics.deleted }}</div>
    </div>
    <div class="stat modified">
      <div class="stat-label">Modified</div>
      <div class="stat-value">{{ statistics.modified }}</div>
    </div>
    <div class="stat unchanged">
      <div class="stat-label">Unchanged</div>
      <div class="stat-value">{{ statistics.unchanged }}</div>
    </div>
    <div class="stat percent">
      <div class="stat-label">Change %</div>
      <div class="stat-value">{{ change_percentage }}</div>
    </div>
  </section>

  <section class="filters">
    <div class="filter-group">
      <button class="filter-btn active" data-filter="changed">Changed</button>
      <button class="filter-btn" data-filter="all">Show All</button>
    </div>
    {% if multi_mode %}
    <div class="filter-group file-filter-group">
      <label for="file-filter">File:</label>
      <select id="file-filter" class="file-filter-select">
        <option value="all">All files</option>
        {% for option in file_options %}
        <option value="{{ option.key }}">{{ option.label }}</option>
        {% endfor %}
      </select>
    </div>
    {% endif %}
  </section>

  <table class="report-table">
    <colgroup>
      <col class="col-index">
      {% if multi_mode %}
      <col class="col-file">
      {% endif %}
      <col class="col-id">
      {% if show_source %}
      <col class="col-source">
      {% endif %}
      <col class="col-old-target">
      <col class="col-new-target">
    </colgroup>
    <thead>
      <tr>
        <th>#</th>
        {% if multi_mode %}
        <th>File Pair</th>
        {% endif %}
        <th>Segment ID</th>
        {% if show_source %}
        <th>Source</th>
        {% endif %}
        <th>Old Target</th>
        <th>New Target</th>
      </tr>
    </thead>
    <tbody>
      {% for row in rows %}
      <tr class="row-{{ row.row_state }}{% if not row.is_changed %} hidden{% endif %}" data-changed="{% if row.is_changed %}1{% else %}0{% endif %}" data-file="{{ row.file_key }}">
        <td>{{ row.index }}</td>
        {% if multi_mode %}
        <td class="file-cell">{{ row.file_label }}</td>
        {% endif %}
        <td>{{ row.segment_id }}</td>
        {% if show_source %}
        <td class="source-cell">{{ row.source|safe }}</td>
        {% endif %}
        <td class="diff-cell old-target">{{ row.old_target|safe }}</td>
        <td class="diff-cell new-target">{{ row.new_target|safe }}</td>
      </tr>
      {% endfor %}
    </tbody>
  </table>
  <div id="empty-state" class="empty-state hidden">No rows match the selected filters.</div>

  <script>
    const buttons = document.querySelectorAll('.filter-btn');
    const rows = document.querySelectorAll('tbody tr');
    const fileFilter = document.getElementById('file-filter');
    const emptyState = document.getElementById('empty-state');
    let currentTypeFilter = 'changed';
    let currentFileFilter = fileFilter ? fileFilter.value : 'all';

    function setActive(button) {
      buttons.forEach((btn) => btn.classList.remove('active'));
      button.classList.add('active');
    }

    function isChangedVisible(row, filter) {
      if (filter === 'all') {
        return true;
      }
      return row.dataset.changed === '1';
    }

    function isFileVisible(row, fileFilterValue) {
      if (fileFilterValue === 'all') {
        return true;
      }
      return row.dataset.file === fileFilterValue;
    }

    function applyFilters() {
      let visibleCount = 0;
      rows.forEach((row) => {
        const visibleByType = isChangedVisible(row, currentTypeFilter);
        const visibleByFile = isFileVisible(row, currentFileFilter);
        const isVisible = visibleByType && visibleByFile;
        row.classList.toggle('hidden', !isVisible);
        if (isVisible) {
          visibleCount += 1;
        }
      });
      if (emptyState) {
        emptyState.classList.toggle('hidden', visibleCount > 0);
      }
    }

    buttons.forEach((button) => {
      button.addEventListener('click', () => {
        currentTypeFilter = button.dataset.filter || 'changed';
        setActive(button);
        applyFilters();
      });
    });

    if (fileFilter) {
      fileFilter.addEventListener('change', () => {
        currentFileFilter = fileFilter.value;
        applyFilters();
      });
    }

    applyFilters();
  </script>
</body>
</html>
